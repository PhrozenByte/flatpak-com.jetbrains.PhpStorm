{
    "id": "com.jetbrains.PhpStorm",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "phpstorm",
    "tags": [
        "proprietary"
    ],
    "separate-locales": false,
    "finish-args": [
        "--device=all",
        "--share=ipc",
        "--share=network",
        "--socket=ssh-auth",
        "--socket=x11",
        "--filesystem=home",
        "--filesystem=xdg-run/gnupg:ro",
        "--filesystem=xdg-run/keyring",
        "--talk-name=com.canonical.AppMenu.Registrar",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.gnome.keyring.SystemPrompter",
        "--env=PHPSTORM_JDK=/app/extra/phpstorm/jre64"
    ],
    "modules": [
        "shared-modules/libsecret/libsecret.json",
        {
            "name": "gcr",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=false",
                "-Dgtk_doc=false"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/gcr/3.41/gcr-3.41.1.tar.xz",
                    "sha256": "bb7128a3c2febbfee9c03b90d77d498d0ceb237b0789802d60185c71c4bea24f",
                    "x-checker-data": {
                        "type": "gnome",
                        "name": "gcr",
                        "versions": {
                            "<": "4.0.0"
                        },
                        "stable-only": true
                    }
                }
            ]
        },
        {
            "name": "pinentry",
            "cleanup": [
                "/include",
                "/lib/debug",
                "/share/info",
                "*.a",
                "*.la"
            ],
            "config-opts": [
                "--disable-fallback-curses",
                "--disable-ncurses",
                "--disable-pinentry-curses",
                "--disable-pinentry-emacs",
                "--disable-pinentry-fltk",
                "--disable-pinentry-gtk2",
                "--disable-pinentry-qt5",
                "--disable-pinentry-tqt",
                "--disable-pinentry-tty",
                "--enable-libsecret=no",
                "--enable-pinentry-gnome3",
                "--without-libcap"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.gnupg.org/ftp/gcrypt/pinentry/pinentry-1.2.1.tar.bz2",
                    "sha256": "457a185e5a85238fb945a955dc6352ab962dc8b48720b62fc9fa48c7540a4067",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 3643,
                        "stable-only": true,
                        "url-template": "https://www.gnupg.org/ftp/gcrypt/pinentry/pinentry-$version.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "zypak",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/refi64/zypak.git",
                    "tag": "v2022.04",
                    "commit": "55a60d110301e8dd37b631503c3524ab7baaf7aa",
                    "x-checker-data": {
                        "type": "git"
                    }
                }
            ]
        },
        {
            "name": "phpstorm",
            "buildsystem": "simple",
            "build-commands": [
                "unzip phpstorm_logos.zip",
                "install -Dm0644 phpstorm_logos/icon-phpstorm.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/${FLATPAK_ID}.svg",
                "install -Dm0644 -t ${FLATPAK_DEST}/share/applications/ ${FLATPAK_ID}.desktop",
                "install -Dm0644 -t ${FLATPAK_DEST}/share/metainfo/ ${FLATPAK_ID}.appdata.xml",
                "install -Dm0755 apply_extra.sh ${FLATPAK_DEST}/bin/apply_extra"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "apply_extra.sh"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.PhpStorm.desktop"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.PhpStorm.appdata.xml"
                },
                {
                    "type": "file",
                    "url": "https://resources.jetbrains.com/storage/products/phpstorm/docs/phpstorm_logos.zip",
                    "sha256": "b7258f07fe0c098e667bc00c20e7590bebe9bcf8ca84fa3e976e69d26d980132",
                    "size": 1112128
                },
                {
                    "type": "extra-data",
                    "filename": "phpstorm.tar.gz",
                    "url": "https://download.jetbrains.com/webide/PhpStorm-2023.1.tar.gz",
                    "sha256": "2e1feb9ae691ada21bd5ddc28a693f75a27aedc8f211729370ed03925e63400b",
                    "size": 647736148,
                    "x-checker-data": {
                        "type": "jetbrains",
                        "code": "PS"
                    }
                }
            ]
        },
        {
            "name": "wrapper",
            "buildsystem": "meson",
            "config-opts": [
                "-Deditor_binary=/app/extra/phpstorm/bin/phpstorm.sh",
                "-Dprogram_name=phpstorm",
                "-Deditor_title=PhpStorm"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "wrapper"
                }
            ]
        }
    ]
}
